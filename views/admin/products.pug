extends ../layouts/main-layout.pug



block content
    if(action !== 'undefined' && action === 'edit')
        .alert.alert-success The product has been updated.

    if products.length > 0
        table.table.table-bordered 
            thead 
                tr  
                    th Image 
                    th Product Name 
                    th Price 
                    th 
            tbody 
                each product in products 
                    tr 
                        td 
                            img(src=`/img/${product.imageUrl}` width='200px')
                        td #{product.name}
                        td #{product.price} TL
                        td
                            a.btn.btn-success(href=`/admin/products/${product.id}`) Edit
    else 
        h1 No Products                        
     
        
    
