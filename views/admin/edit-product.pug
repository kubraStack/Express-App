extends ../layouts/main-layout.pug 

block styles 
    link(rel="stylesheet" href="/css/forms.css")

block content
    form(action="/admin/edit-product" method="POST")
        .form-group.row
            label(for="productName").col-form-label Product Name
            .col-sm-12
                input.form-control#name(type="text" name="name")
        
        .form-group.row 
            label(for="price").col-form-label Price
            .col-sm-12
                input.form-control#price(type="text" name="price")
        
            
        .form-group.row 
            label(for="imageUrl").col-form-label Image
            .col-sm-12
                input.form-control#image(type="text" name="imageUrl")
        
            
        .form-group.row 
            label(for="description").col-form-label Description
            .col-sm-10
                input.form-control#description(type="text" name="description")
        
            .col-sm-2
                input(type="submit" value="Save product").btn.btn-success