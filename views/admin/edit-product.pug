extends ../layouts/main-layout.pug 

block styles 
    link(rel="stylesheet" href="/css/forms.css")

block content

    form(action="/admin/products" method="POST")

        input(type="hidden" name="id" value=`${product.id}`)

        .form-group.row
            label(for="productName").col-form-label Product Name
            .col-sm-12
                input.form-control#name(type="text" name="name" value=`${product.name}`)
        
        .form-group.row 
            label(for="price").col-form-label Price
            .col-sm-12
                input.form-control#price(type="text" name="price" value=`${product.price}`)
        
            
        .form-group.row 
            label(for="imageUrl").col-form-label Image
            .col-sm-12
                input.form-control#image(type="text" name="imageUrl" value=`${product.imageUrl}`)
        
        .form-group.row 
            label(for="categoryid").col-form-label Category
            .col-sm-12
                select.form-control#categoryid(name="categoryid")
                    option(value="-1") Select Category
                    each category in categories 
                      option(value=`${category.id}` selected=category.id===product.categoryid) #{category.name}     
        .form-group.row 
            label(for="description").col-form-label Description
            .col-sm-10
                textarea(name="description", cols="30", rows="10").form-control #{product.description}
        
        .row.mt-5
            input(type="submit" value="Save product").btn.btn-success